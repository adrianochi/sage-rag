{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "category", "question", "difficulty", "pairs"],
  "properties": {
    "type": { "type": "string", "enum": ["matching"] },
    "category": { "type": "string" },
    "question": { "type": "string" },
    "difficulty": { "type": "integer", "minimum": 1, "maximum": 10 },
    "pairs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["left", "right"],
        "properties": {
          "left": { "type": "string" },
          "right": { "type": "string" }
        }
      }
    }
  }
}
