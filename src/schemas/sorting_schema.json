{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "type",
    "category",
    "question",
    "difficulty",
    "items",
    "solution"
  ],
  "properties": {
    "type": { "type": "string", "enum": ["sorting"] },
    "category": { "type": "string" },
    "question": { "type": "string" },
    "difficulty": { "type": "integer", "minimum": 1, "maximum": 10 },
    "items": {
      "type": "array",
      "minItems": 2,
      "items": { "type": "string" }
    },
    "solution": {
      "type": "array",
      "minItems": 2,
      "items": { "type": "string" }
    }
  }
}
