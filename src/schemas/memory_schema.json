{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["type", "category", "difficulty", "pairs"],
  "properties": {
    "type": { "type": "string", "enum": ["memory"] },
    "category": { "type": "string" },
    "difficulty": { "type": "integer", "minimum": 1, "maximum": 10 },
    "pairs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["item1", "item2"],
        "properties": {
          "item1": { "type": "string" },
          "item2": { "type": "string" }
        }
      }
    }
  }
}
